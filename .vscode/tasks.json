{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                // toggle comments on next 3 lines to remove debug info
                // "-O2",
                // "-DNDEBUG",
                "-g",
                // don't allow compiler extensions (this way we can stay compatible with the C++ standard)
                "-pedantic-errors",
                // these next -W... lines set the warnings to maximum
                // "-Wall",
                // "-Weffc++",
                // "-Wextra",
                // "-Wconversion",
                // "-Wsign-conversion",
                // treat warnings as errors
                // "-Werror",
                // the language standard to use. Can alternatively be configured in VS Code preferences I believe
                "-std=c++23",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}",
                // libraries for raylib stuff
                "-lraylib",
                "-lGL",
                "-lm",
                "-lpthread",
                "-ldl",
                "-lrt",
                "-lX11",
                // the mold linker doesn't know where to find raylib
                // "-fuse-ld=mold"
            ],
            "options": {
                "cwd": "${fileDirname}",
                // "justMyCode": true,
                // "skipFiles": [
                // ]
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0",
}